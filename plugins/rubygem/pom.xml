<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus.plugins</groupId>
    <artifactId>nexus-plugins</artifactId>
    <version>2.15.2-03</version>
  </parent>

  <artifactId>nexus-plugins-rubygem</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>
  <packaging>pom</packaging>

  <properties>
    <jruby.version>9.1.16.0</jruby.version>
    <jruby-plugins.version>1.0.7</jruby-plugins.version>
  </properties>

  <repositories>
    <repository>
      <id>rubygems-releases</id>
      <url>http://rubygems-proxy.torquebox.org/releases</url>
    </repository>
  </repositories>

  <dependencyManagement>
    <dependencies>

      <dependency>
        <groupId>org.jruby</groupId>
        <artifactId>jruby</artifactId>
        <version>${jruby.version}</version>
        <type>pom</type>
      </dependency>

      <dependency>
        <groupId>org.jruby.joni</groupId>
        <artifactId>joni</artifactId>
        <version>2.1.15.SONATYPE</version>
      </dependency>

      <dependency>
        <groupId>rubygems</groupId>
        <artifactId>maven-tools</artifactId>
        <version>1.0.5</version>
        <type>gem</type>
      </dependency>

    </dependencies>
  </dependencyManagement>

  <modules>
    <module>nexus-ruby-client</module>
    <module>nexus-ruby-tools</module>
    <module>nexus-ruby-plugin</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>gem-maven-plugin</artifactId>
          <version>${jruby-plugins.version}</version>
        </plugin>

        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>minitest-maven-plugin</artifactId>
          <version>${jruby-plugins.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
