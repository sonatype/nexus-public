<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>nexus-parent</artifactId>
    <version>3.77.0-08</version>
  </parent>

  <groupId>org.sonatype.nexus.testsuite</groupId>
  <artifactId>nexus-testsuite</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>
  <packaging>pom</packaging>

  <properties>
    <failsafe.timeout>900</failsafe.timeout>

    <clm.skip>true</clm.skip>
  </properties>

  <modules>
    <module>nexus-docker-testsupport</module>
    <module>nexus-content-suite</module>
    <module>nexus-it-suite</module>
    <module>nexus-it-suite-data</module>
  </modules>

  <dependencyManagement>
    <dependencies>

      <!-- IMPORTS -->

      <dependency>
        <groupId>org.sonatype.nexus.plugins</groupId>
        <artifactId>nexus-plugins</artifactId>
        <type>pom</type>
        <version>${project.version}</version>
        <scope>import</scope>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.testsuite</groupId>
        <artifactId>nexus-docker-testsupport</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.testsuite</groupId>
        <artifactId>nexus-repository-testsupport</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.testsuite</groupId>
        <artifactId>nexus-repository-content-testsupport</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.testsuite</groupId>
        <artifactId>nexus-content-suite</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.testsuite</groupId>
        <artifactId>nexus-it-suite</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.testsuite</groupId>
        <artifactId>nexus-it-suite-data</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.assemblies</groupId>
        <artifactId>nexus-base-template</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </dependency>

      <dependency>
        <groupId>com.sonatype.nexus.plugins</groupId>
        <artifactId>nexus-tags-plugin</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>com.sonatype.nexus.plugins</groupId>
        <artifactId>nexus-api-extension-plugin</artifactId>
        <version>${project.version}</version>
      </dependency>

    </dependencies>
  </dependencyManagement>

  <profiles>
    <profile>
      <id>idea</id>
      <dependencies>
        <dependency>
          <groupId>org.codehaus.groovy</groupId>
          <artifactId>groovy-all</artifactId>
          <scope>provided</scope>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>initialize</phase>
                <goals>
                  <goal>add-source</goal>
                </goals>
                <configuration>
                  <sources>
                    <source>src/main/script</source>
                  </sources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>sonatype</id>
      <activation>
        <property>
          <name>!public</name>
        </property>
      </activation>
      <modules>
        <!-- these modules still rely on the groovy-eclipse-compiler not present in maven central -->
        <module>nexus-repository-testsupport</module>
        <module>nexus-repository-content-testsupport</module>
      </modules>
    </profile>
  </profiles>

</project>
