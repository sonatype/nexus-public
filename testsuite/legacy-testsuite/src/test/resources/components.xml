<component-set>
  <components>
    <component>
      <role>org.sonatype.jettytestsuite.ProxyServer</role>
      <implementation>org.sonatype.jettytestsuite.ProxyServer</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <port>${webproxy-server-port}</port>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.jettytestsuite.ControlledServer</role>
      <implementation>org.sonatype.jettytestsuite.ControlledServer</implementation>
      <configuration>
        <port>${webproxy-server-port}</port>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.ldaptestsuite.LdapServer</role>
      <implementation>org.sonatype.ldaptestsuite.LdapServer</implementation>
      <configuration>
        <workingDirectory>${basedir}/target/apache-ds/</workingDirectory>
        <doDelete>true</doDelete>
        <port>0</port>
        <partitions>
          <partition>
            <name>sonatype</name>
            <suffix>o=sonatype</suffix>
            <indexedAttributes>
              <indexedAttribute>
                objectClass
              </indexedAttribute>
              <indexedAttribute>o</indexedAttribute>
            </indexedAttributes>
            <rootEntryClasses>
              <rootEntryClass>top</rootEntryClass>
              <rootEntryClass>organization</rootEntryClass>
            </rootEntryClasses>
            <ldifFile>${basedir}/target/ldif_dir/test.ldif</ldifFile>
          </partition>
        </partitions>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.ldaptestsuite.LdapServer</role>
      <role-hint>org.sonatype.nexus.testsuite.ldap.nxcm2974.NXCM2974DoNotHtmlEscapeUserPassFromRestPayloadIT</role-hint>
      <implementation>org.sonatype.ldaptestsuite.LdapServer</implementation>
      <configuration>
        <workingDirectory>${basedir}/target/apache-ds/</workingDirectory>
        <doDelete>true</doDelete>
        <port>0</port>
        <partitions>
          <partition>
            <name>more&amp;amp;more</name>
            <suffix>o=more&amp;amp;more</suffix>
            <indexedAttributes>
              <indexedAttribute>objectClass</indexedAttribute>
              <indexedAttribute>o</indexedAttribute>
            </indexedAttributes>
            <rootEntryClasses>
              <rootEntryClass>top</rootEntryClass>
              <rootEntryClass>organization</rootEntryClass>
            </rootEntryClasses>
            <ldifFile>target/ldif_dir/test.ldif</ldifFile>
          </partition>
        </partitions>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.ldaptestsuite.LdapServer</role>
      <role-hint>org.sonatype.nexus.testsuite.ldap.nexus5193.Nexus5193LdapsSupportIT</role-hint>
      <implementation>org.sonatype.ldaptestsuite.LdapServer</implementation>
      <configuration>
        <workingDirectory>${basedir}/target/apache-ds/</workingDirectory>
        <doDelete>true</doDelete>
        <port>0</port>
        <ssl>true</ssl>
        <partitions>
          <partition>
            <name>sonatype</name>
            <suffix>o=sonatype</suffix>
            <indexedAttributes>
              <indexedAttribute>
                objectClass
              </indexedAttribute>
              <indexedAttribute>o</indexedAttribute>
            </indexedAttributes>
            <rootEntryClasses>
              <rootEntryClass>top</rootEntryClass>
              <rootEntryClass>organization</rootEntryClass>
            </rootEntryClasses>
            <ldifFile>${basedir}/target/ldif_dir/test.ldif</ldifFile>
          </partition>
        </partitions>
      </configuration>
    </component>

  </components>
</component-set>
